{
  "private": true,
  "name": "wendler",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "lint-fix": "eslint --fix 'src/**/*.{ts,tsx,js}'",
    "test": "jest --watch",
    "start": "preact watch",
    "format": "prettier --write 'src/**/*{js,scss,ts,tsx,css}'",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": "echo linting && npm run lint-fix && echo formatting && npm run format",
    "src/**/*.{scss,css}": "npm run format"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "autoprefixer": "^10.4.13",
    "big.js": "^6.2.1",
    "d3": "^7.8.2",
    "dayjs": "^1.11.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.1.0",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "lint-staged": "^14.0.1",
    "lodash.chunk": "^4.2.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "lodash.uniq": "^4.5.0",
    "lodash.uniqby": "^4.7.0",
    "postcss": "^8.4.21",
    "preact-cli": "^3.5.0",
    "prettier": "^2.7.1",
    "react-animate-height": "^3.1.0",
    "sirv-cli": "1.0.3",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "framer-motion": "^11.0.5",
    "preact": "^10.17.1",
    "preact-render-to-string": "^6.2.1",
    "preact-router": "^4.1.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
